<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlsImageCropper="using:Naylah.Toolkit.UWP.Controls.ImageCropper"
    
    >

    <Style
        TargetType="controlsImageCropper:ImageCropper">
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="controlsImageCropper:ImageCropper">
                    <Canvas
                        x:Name="PART_Canvas"
                        Background="#00000000"
                        >
                        <Image
                            x:Name="PART_Image"
                            Stretch="Fill"
                            />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
