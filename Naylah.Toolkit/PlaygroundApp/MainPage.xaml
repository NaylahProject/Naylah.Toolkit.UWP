<Page
    x:Class="PlaygroundApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlaygroundApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    xmlns:naylahsidebar="using:Naylah.Toolkit.UWP.Controls.CircularSlider"
    
    >

    <Grid 
        x:Name="gdPageContent"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <naylahsidebar:CircularSliderControl 
                        
                        x:Name="clc"
                         Grid.Row="0" 
                         Background="Transparent"
                         Margin="-20,0,0,0"
                         Width="400"
                         Height="370"
                         OuterRingRadius="120"
                         InnerRingRadius="80"
                         OuterRingMaxValue ="59"
                         InnerRingMaxValue ="12"
                         StripWidth="40"
                         OuterRingColor="BlueViolet"
                         InnerRingColor="DarkSlateBlue"                            
                         GripSize="50"
                         GripColor="White"
                         GripColorPressed="LightGray"
                         />
        
    </Grid>
    
    
</Page>
