<Page
    x:Class="PlaygroundApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlaygroundApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"

    xmlns:ImageChooser="using:Naylah.Toolkit.UWP.Controls.ImageChooser"
    xmlns:AppVersion="using:Naylah.Toolkit.UWP.Controls.AppVersion">

    <Grid
        x:Name="gdPageContent"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        >

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Image
            x:Name="t"
            Grid.Row="0"
            >
            
        </Image>
        
        <ImageChooser:ImageChooser
            Grid.Row="1"
            x:Name="imageCropper"
            TopCommandBarBackground="Pink"
            TopCommandBarForeground="Red"
            BottomCommandBarBackground="Orange"
            BottomCommandBarForeground="DarkBlue"
            
            
            >
        </ImageChooser:ImageChooser>


        <AppVersion:AppVersionShellFrame 
            AppName="App name sample" 
            Type="Dev"
            
            >
        </AppVersion:AppVersionShellFrame>

    </Grid>
</Page>